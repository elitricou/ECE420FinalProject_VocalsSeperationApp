<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/one_item_background"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="center_horizontal"
        android:text="@string/audio_recording_is_still_in_process"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/text_view_alert_dialog_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="center_horizontal"
        android:text="@string/do_you_want_to_stop_process"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_alert_dialog_stop_audio_no"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/archivo_black"
            android:text="@string/no"
            android:textColor="@color/color_4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_alert_dialog_stop_audio_yes"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/archivo_black"
            android:text="@string/yes"
            android:textColor="@color/color_4"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>